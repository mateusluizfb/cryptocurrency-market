<div class="container">
  <%= form_for @order, url: create_order_path do |f| %>
    <div class="form-group">
      <label for="owner_email">Your email</label>
      <%= f.email_field :owner_email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <label for="coin_name">Select the coin</label>
      <%= select :coin, :data, options_for_select(@coins_prices.collect {|coin| ["#{coin[:coin_name]} - $#{coin[:coin_price]}", "#{coin[:coin_name]}:#{coin[:coin_price]}"] }), {}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <label for="coin_name">Value in dollars</label>
      <%= f.text_field :dollar_value, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "Buy!", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
