<div class="container">
  <%= form_for @order, as: :post, url: "" do |f| %>
    <div class="form-group">
      <label for="owner_email">Your email</label>
      <%= f.text_field :owner_email, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="coin_name">Select the coin</label>
      <%= f.select :coin_name, @coins_prices.collect {|coin| coin[:coin_name] }, {}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <label for="coin_name">Value in dollars</label>
      <%= f.number_field :coin_amount, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Buy!", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
