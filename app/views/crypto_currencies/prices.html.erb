<div class="container">
  <div class="row">
    <h3>Crypto currencies prices:</h3>
    <table class="table">
      <thead>
        <th>Coin name</th>
        <th>Price</th>
      </thead>
      <tbody>
        <% @coins_prices.each do |price| %>
          <tr>
            <td> <%= price[:coin_name] %> </td>
            <td> $ <%= price[:coin_price] %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md">
      <%= link_to "Buy", new_order_path, class: "btn btn-success"%>
    </div>
  </div>
</div>
